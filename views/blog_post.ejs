        margin-top: 2rem;
        text-align: center;
    }

    .english h2 {
        margin-top: 2rem;
        text-align: center;
    }
    .pdf_url{
        margin-top: 2rem;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
    .pdf_url input{
        height: 2rem;
