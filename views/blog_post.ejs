                <div class="add_englisheventbtn buttons">
                    <button type="button" onclick="addenglishEvent()">+ Add More</button>
                </div>
            </div>
            <div class="question">
                <div class="add_englishquestionbtn buttons">
                    <button type="button" onclick="addenglishquestion()">+ Add Question</button>
                </div>
                <!-- <form action="/blog_route/post" method="post"> -->
