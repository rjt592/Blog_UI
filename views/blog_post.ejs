<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html {
        font-size: 16px;
    }

    .main {
        /* position: relative; */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .post_form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        width: 80%;
    }

    .textarea {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        width: 100%;
    }

    .form_upper input {
        height: 2rem;
        width: 100%;
    }

    .form_upper textarea {
        height: 10rem;
        width: 100%;
    }

    .importent_events {
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        width: 100%;
        padding-top: 1.3rem;
        margin-top: .5rem;
    }

    .importent_events input {
        height: 2rem;
        width: 100%;
        z-index: 1;
    }

    .add_event {
        margin-top: .4rem;
        margin-bottom: .4rem;
        display: flex;
        flex-direction: row;
        justify-content: left;
        align-items: center;
        width: 100%;
    }

    .add_event input {
        width: 100%;
        height: 2rem;
    }

    .add_event button {
        margin-left: .2rem;
        background-color: red;
        color: #fff;
        width: 2rem;
        height: 2rem;
    }

    .delete_btn {
        margin-top: 0.5rem;
        background-color: red;
        color: #fff;
        width: 7rem;
        height: 2rem;
    }

    .question {
        position: relative;
        margin-top: 2rem;
        padding: 1rem;
        padding-top: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: start;
        width: 100%;
        border-radius: .5rem;
        box-shadow: 0rem 1rem 2rem 0rem rgba(0, 0, 0, 0.2), 0rem .5rem 1rem 0rem rgba(0, 0, 0, 0.2);
    }

    .more_questions {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: end;
        width: 100%;
    }

    .question_item {
        width: 100%;
        margin-top: 1rem;
        display: flex;
        flex-direction: row;
    }

    .question_item input {
        margin-left: 1rem;
    }

    .question input {
        width: 100%;
        height: 2rem;
    }

    .submit_btn {
        margin-top: 1rem;
        margin-bottom: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
    }

    .submit_btn button {
        padding: 1rem 2rem;
        font-size: 1.5rem;
        font-weight: 600;
        background-color: ghostwhite;
        color: black;
        border-radius: .5rem;
    }

    .buttons {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: end;
    }

    .buttons button {
        width: 7rem;
        height: 2rem;
    }

    .add_hindieventbtn {
        position: absolute;
        top: 0rem;
    }

    .add_hindiquestionbtn {
        position: absolute;
        top: .5rem;
        right: 1rem;
    }

    .add_englisheventbtn {
        position: absolute;
        top: 0rem;
    }

    .add_englishquestionbtn {
        position: absolute;
        top: .5rem;
        right: 1rem;
